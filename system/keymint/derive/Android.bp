package {
    default_applicable_licenses: ["system_keymint_license"],
}

rust_proc_macro {
    name: "libkmr_derive",
    crate_name: "kmr_derive",
    cargo_env_compat: true,
    cargo_pkg_version: "0.1.0",
    srcs: ["src/lib.rs"],
    edition: "2021",
    rustlibs: [
        "libproc_macro2",
        "libquote",
        "libsyn",
    ],
}

rust_test {
    name: "libkmr_derive_test",
    crate_name: "kmr_derive_test",
    srcs: ["tests/integration_test.rs"],
    test_suites: ["general-tests"],
    edition: "2021",
    lints: "android",
    rustlibs: [
        "libciborium",
        "libciborium_io",
        "libkmr_wire",
    ],
    proc_macros: [
        "libkmr_derive",
    ],
}
