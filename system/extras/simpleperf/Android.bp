genrule {
    name: "simpleperf_script.zip",
    tools: [
        "soong_zip",
    ],
    srcs: [
        "**/*.proto",
        "app_api/**/*",
        "doc/**/*",
        "demo/**/*",
        "runtest/**/*",
        "scripts/**/*",
        "testdata/**/*",
    ],
    exclude_srcs: [
        "scripts/binary_cache/**/*",
    ],
    cmd: "$(location soong_zip) -o $(out) -C system/extras/simpleperf " +
        "-D system/extras/simpleperf ",
    out: [
        "simpleperf/simpleperf_script.zip",
    ],
    dist: {
        targets: ["simpleperf"],
        dir: "simpleperf",
    },
}
