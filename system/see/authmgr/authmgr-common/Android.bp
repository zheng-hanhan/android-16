    crate_name: "authmgr_common_unit_test",
    srcs: ["src/lib.rs"],
    host_supported: true,
    rustlibs: [
        "libauthgraph_boringssl",
        "libauthgraph_core_test",
        "libauthgraph_core",
        "libauthmgr_common",
        "libauthmgr_common_util",
        "libcoset",
        "libdice_policy",
        "libdice_policy_builder",
        "libnum_traits",
    ],
    proc_macros: [
        "libnum_derive",
    ],
    test_suites: ["general-tests"],
}
